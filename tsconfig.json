{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES5",
      "moduleResolution": "node",
      "outDir": "bin",
      "rootDir": "src/",
      "resolveJsonModule": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "experimentalDecorators": true, // to allow TypeORM Decorators
      "strictPropertyInitialization": false, // to support TypeORM Entites without adding initilization
      "emitDecoratorMetadata":true,
      "skipLibCheck": true
    },
    "includes": [
      "src/**/*.ts",
      "src/**/*.hbs",
      "src/**/*.json"
    ],
    "exclude": [
      "node_modules",
    ]
  }